{
  "name": "ironflow/form-builder",
  "description": "Dynamic form builder for Laravel with HaloUI integration",
  "keywords": [
    "laravel",
    "form",
    "builder",
    "dynamic",
    "haloui"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Aure Dulvresse",
      "email": "ironflow.framework@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/support": "^11.0|^12.0",
    "ironflow/halo-ui": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "orchestra/testbench": "^10.0",
    "mockery/mockery": "^1.6",
    "laravel/pint": "^1.13",
    "phpstan/phpstan": "^1.10",
    "pestphp/pest": "^3.0",
    "pestphp/pest-plugin-laravel": "^3.0",
    "pestphp/pest-plugin-faker": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "IronFlow\\FormBuilder\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "IronFlow\\FormBuilder\\FormBuilderServiceProvider"
      ]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    },
    "optimize-autoloader": true
  }
}